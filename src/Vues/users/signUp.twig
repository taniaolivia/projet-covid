{% extends 'main.twig' %}

{% block title %}Sign Up{% endblock %}
{% block content %}
<div class="contentbg">
    <div class="background">
        <h1>Create an account</h1>
        <form action= {{ url_for('adduser') }} method="post">
            <p><strong id="info">Username :  </strong><input type="text" name="login"></p>
            <p><strong id="info">Password : </strong><input type="password" name="password"></p>
            <p><strong id="info">Confirmation password : </strong><input type="password" name="verifypwd"></p>
            <p><strong id="info">Email : </strong><input type="email" name="email"></p>
            <p><strong id="info">Infected : </strong><input type="radio" name="infected" value="yes"> Yes     <input type="radio" name="infected" value="no"> No</p>
            <button type="submit" value="Submit" id="addNewUser">Submit</button>
            {% if token %}
                <input type="hidden" name={{ token['nameKey'] }} value={{ token['name'] }}>
                <input type="hidden" name={{ token['valueKey'] }} value={{ token['value'] }}>
            {% endif %}

        </form>
        <p id="message-warning">{{ message }}</p>
    </div>
</div>
{% endblock %}


